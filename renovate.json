{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>mscharley/renovate-config"
	],
	"gleam": {
		"fileMatch": [
			"(^|/)gleam\\.toml$"
		],
		"packageRules": [
			{
				"matchDepTypes": [
					"devDependencies"
				],
				"rangeStrategy": "auto"
			}
		]
	},
	"minor": {
		"automerge": false
	},
	"patch": {
		"automerge": false
	},
	"pin": {
		"automerge": false
	}
}
